  <%- end -%>
  <%- if @bond['fail_over_mac_policy'] -%>
FailOverMACPolicy=<%= @bond['fail_over_mac_policy'] %>
  <%- end -%>
  <%- if @bond['arp_validate'] -%>
ARPValidate=<%= @bond['arp_validate'] %>
  <%- end -%>
  <%- if @bond['arp_interval_sec'] -%>
ARPIntervalSec=<%= @bond['arp_interval_sec'] %>
