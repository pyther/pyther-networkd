  <%- if @bond['up_delay_sec'] -%>
UpDelaySec=<%= @bond['up_delay_sec'] %>
  <%- end -%>
  <%- if @bond['down_delay_sec'] -%>
DownDelaySec=<%= @bond['down_delay_sec'] %>
  <%- end -%>
  <%- if @bond['learn_packet_interval_sec'] -%>
